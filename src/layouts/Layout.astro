  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500;700;900&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Noto Sans KR', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(180deg, #E8F4FF 0%, #FFFFFF 50%, #F0F8FF 100%);
      min-height: 100vh;
      color: #2C3E50;
      position: relative;
    }
    
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(circle at 20% 50%, rgba(52, 152, 219, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(108, 188, 250, 0.05) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }
    
    nav {
      background: linear-gradient(135deg, #4A90E2 0%, #5CA8F5 100%);
      padding: 1.2rem 2rem;
      box-shadow: 0 4px 20px rgba(74, 144, 226, 0.3);
      position: relative;
      z-index: 10;
    }
    
    nav::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #FFFFFF 0%, #6CBCFA 50%, #FFFFFF 100%);
    }
    
    nav ul {
      list-style: none;
      display: flex;
      gap: 2rem;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    nav a {
      text-decoration: none;
      color: #FFFFFF;
      font-weight: 700;
      font-size: 1.1rem;
      transition: all 0.3s;
      padding: 0.5rem 1.5rem;
      border-radius: 25px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }
    
    nav a:hover {
      background: rgba(255, 255, 255, 0.25);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
    }
    
    main {
      max-width: 1400px;
      margin: 2rem auto;
      padding: 2rem;
      position: relative;
      z-index: 1;
    }
    
    .container {
      background: #FFFFFF;
      border-radius: 30px;
      padding: 3rem;
      box-shadow: 0 10px 40px rgba(74, 144, 226, 0.15);
      border: 3px solid #E3F2FD;
      position: relative;
      overflow: hidden;
    }
    
    .container::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(108, 188, 250, 0.1) 0%, transparent 70%);
      border-radius: 50%;
    }
    
    h1 {
      text-align: center;
      background: linear-gradient(135deg, #4A90E2 0%, #5CA8F5 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 2rem;
      font-size: 2.8rem;
      font-weight: 900;
      position: relative;
      z-index: 1;
      text-shadow: 0 2px 10px rgba(74, 144, 226, 0.2);
    }
    
    button {
      background: linear-gradient(135deg, #4A90E2 0%, #5CA8F5 100%);
      color: white;
      border: none;
      padding: 1.2rem 2.5rem;
      font-size: 1.2rem;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.3s;
      font-weight: 700;
      box-shadow: 0 8px 20px rgba(74, 144, 226, 0.3);
      position: relative;
      overflow: hidden;
    }
    
    button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.5s;
    }
    
    button:hover::before {
      left: 100%;
    }
    
    button:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(74, 144, 226, 0.4);
    }
    
    button:active {
      transform: translateY(-1px);
    }
    
    button:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  </style>
</head>
